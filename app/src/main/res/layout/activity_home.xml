<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cl_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
                android:id="@+id/cv_pln"
                android:layout_width="100dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="@color/colorPln"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_exchangeIcon"
                app:layout_constraintStart_toStartOf="parent">
            <TextView
                    android:id="@+id/tv_pln"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="@string/currencyPln"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/cv_usd"
                android:layout_width="100dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="@color/colorUsd"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_exchangeIcon">
            <TextView
                    android:id="@+id/tv_usd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="@string/currencyUsd"/>
        </androidx.cardview.widget.CardView>

        <ImageView
                android:src="@drawable/ic_compare_arrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iv_exchangeIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/cdExchangeIcon"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="4.306"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:id="@+id/tv_plnCurrency"
                app:layout_constraintEnd_toEndOf="@+id/cv_pln"
                app:layout_constraintStart_toStartOf="@+id/cv_pln"
                app:layout_constraintBottom_toTopOf="@+id/cv_pln"
                android:layout_marginBottom="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1.1161"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:id="@+id/tv_usdCurrency"
                app:layout_constraintStart_toStartOf="@+id/cv_usd"
                app:layout_constraintEnd_toEndOf="@+id/cv_usd"
                app:layout_constraintBottom_toTopOf="@+id/cv_usd"
                android:layout_marginBottom="8dp"/>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/cl_snackbarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fl_footer"/>

        <FrameLayout
                android:id="@+id/fl_footer"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#D3D3D3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                    android:id="@+id/tv_lastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="end|center_vertical"
                    tools:text="Last update: 2019-05-21 21:30:40"/>

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
            android:id="@+id/pb_loading"
            style="?android:progressBarStyle"
            android:indeterminate="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
